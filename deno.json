{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "name": "@flowcore/sdk",
  "version": "0.0.1",
  "publish": {
    "include": ["src/**/*.ts"]
  },
  "tasks": {
    "dev": "deno run --watch main.ts"
  },
  "imports": {
    "@aws-sdk/client-dynamodb": "npm:@aws-sdk/client-dynamodb@^3.674.0",
    "@std/assert": "jsr:@std/assert@1"
  },
  "fmt": {
    "exclude": ["node_modules", "dist"],
    "lineWidth": 120,
    "indentWidth": 2,
    "useTabs": false,
    "semiColons": false
  },
  "lint": {
    "exclude": ["node_modules", "dist"]
  }
}
