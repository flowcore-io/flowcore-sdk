{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "workspace": [
    "./src/core",
    "./src/commands/data-core"
  ],
  "imports": {
    "@sinclair/typebox": "npm:@sinclair/typebox@0.32.15",
    "@std/assert": "jsr:@std/assert@^1.0.6"
  },
  "exclude": [
    "node_modules",
    ".github",
    ".vscode",
    "test",
    ".editorconfig"
  ],
  "fmt": {
    "exclude": [
      "node_modules"
    ],
    "lineWidth": 120,
    "indentWidth": 2,
    "useTabs": false,
    "semiColons": false
  },
  "lint": {
    "exclude": [
      "node_modules"
    ]
  }
}
